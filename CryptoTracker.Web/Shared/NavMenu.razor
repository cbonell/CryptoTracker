<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Moon Trading</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Coins">
                <span aria-hidden="true"></span> Coins
            </NavLink>
        </div>        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Trending">
                <span aria-hidden="true"></span> Trending
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/MyWallet">
                <span aria-hidden="true"></span> My Wallet
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <a id="darkmode-toggle">
                    <i class="fa fa-moon fa-2x darkmode-toggle-icon"></i>
                    <i class="fa fa-sun fa-2x lightmode-toggle-icon"></i>
                </a>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
